<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Monkeys.Curso.Pages.DetailsMokeyPage" 
             xmlns:vm="clr-namespace:Monkeys.Curso.Core.ViewModel"
             x:DataType="vm:DetailsMokeyViewModel"
             Title="Información del Mono">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Tarjeta con sombra -->
            <Border StrokeThickness="1" Stroke="#ddd" BackgroundColor="White" Padding="0" >
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>

                <VerticalStackLayout>
                    <!-- Imagen-->
                    <Image Source="{Binding Monkey.Image}" Aspect="AspectFill" HeightRequest="200" />


                   
                    <!-- Elementos -->
                    <VerticalStackLayout Padding="20" Spacing="10">
                        <Label Text="{Binding Monkey.Name}" FontSize="24" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Center"/>
                        <Label Text="{Binding Monkey.Location}" FontSize="18" TextColor="#666" HorizontalOptions="Center"/>

                        <Label Text="Detalles:" FontSize="18" FontAttributes="Bold" TextColor="#444"/>
                        <Label Text="{Binding Monkey.Details}" FontSize="16" TextColor="#444"/>

                        <Label Text="Población:" FontSize="18" FontAttributes="Bold" TextColor="#444"/>
                        <Entry Text="{Binding Monkey.Population}" FontSize="16" TextColor="#444" Keyboard="Numeric" BackgroundColor="#f5f5f5"/>

                        <Label Text="Ubicación:" FontSize="18" FontAttributes="Bold" TextColor="#444"/>
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Latitud:" FontSize="16" TextColor="#666"/>
                            <Label Text="{Binding Monkey.Latitude}" FontSize="16" TextColor="#444"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Longitud:" FontSize="16" TextColor="#666"/>
                            <Label Text="{Binding Monkey.Longitude}" FontSize="16" TextColor="#444"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
